        </record>
        
        <menuitem
            id="menu_payroll_billability"
            name="Billability Exports"
            parent="hr.menu_hr_root"
            sequence="12"
            action="action_export_billability"
        />
        <record id="menu_payroll_billability" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('vcls-hr.vcls_group_controlling'))]"/>
        </record>
        
    </data>
