<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="LC_timesheet_read_rule" model="ir.rule">
            <field name="name">LC can see all project TS</field>
            <field name="model_id" ref="model_account_analytic_line"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">[('project_id.user_id','=',user.id),('project_id', '!=', False)]</field>
            <field name="groups" eval="[(4, ref('hr_timesheet.group_hr_timesheet_user'))]"/>
        </record>

        <record id="LC_timesheet_write_rule" model="ir.rule">
            <field name="name">LC can edit unvalidated project TS</field>
            <field name="model_id" ref="model_account_analytic_line"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">[('project_id.user_id','=',user.id),('validated', '=', False),('project_id', '!=', False)]</field>
            <field name="groups" eval="[(4, ref('hr_timesheet.group_hr_timesheet_user'))]"/>
        </record>

        <record id="timesheet_read_rule" model="ir.rule">
            <field name="name">Everyone can read it's TS</field>
            <field name="model_id" ref="model_account_analytic_line"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">[('user_id', '=', user.id),('project_id', '!=', False)]</field>
            <field name="groups" eval="[(4, ref('hr_timesheet.group_hr_timesheet_user'))]"/>
        </record>

        <record id="timesheet_write_rule" model="ir.rule">
            <field name="name">Everyone can edit non-validated TS</field>
            <field name="model_id" ref="model_account_analytic_line"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">[('user_id', '=', user.id),('project_id', '!=', False),('validated', '=', False)]</field>
            <field name="groups" eval="[(4, ref('hr_timesheet.group_hr_timesheet_user'))]"/>
        </record>

    </data>
</odoo>