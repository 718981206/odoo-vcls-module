<odoo>
    <data>

        <record id="project_followup_report_pivot_view" model="ir.ui.view">
            <field name="name">timesheet.forecast.followup.report.pivot</field>
            <field name="model">project.timesheet.forecast.report.analysis</field>
            <field name="arch" type="xml">
                <pivot string="Project Follow-up Report">
                    <field name="project_id" type="col"/>
                    <field name="task_id" type="col"/>
                    <field name="employee_id" type="row"/>
                    <field name="revenue" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="project_followup_report_action" model="ir.actions.act_window">
            <field name="name">Project Follow-up Report</field>
            <field name="res_model">project.timesheet.forecast.report.analysis</field>
            <field name="view_mode">pivot</field>
            <field name='view_id' ref='project_followup_report_pivot_view' />
        </record>

        <menuitem id="menu_report_followup"
            name="Project Follow-up"
            parent="project.menu_main_pm"
            action="vcls-timesheet.project_followup_report_action"
            sequence='6' />
    
    </data>
</odoo>