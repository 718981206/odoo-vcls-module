<odoo>
    <data>
        <record model="ir.ui.view" id="view_task_form2_inherited">
            <field name="name">project.task.form.inherited</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='timesheet_ids']//tree//field[@name='employee_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>

        <record id='vcls_timesheet_lc_view_tree' model='ir.ui.view'>
            <field name="name">vcls-timesheet.view.tree</field>
            <field name="model">account.analytic.line</field>
            <field name="arch" type="xml">
                <tree editable="top" string="Timesheets" create="false" colors="red:at_risk==True">
                    <field name="date" readonly="1"/>
                    <field name = "internal_comment" readonly="1"/>
                    <field name="name" readonly="1" />
                    <field name="project_id" readonly="1"/>
                    <field name="task_id"/>
                    <field name="unit_amount" readonly="1" string="Duration (hours)"/>
                    <field name="lc_comment"/>
                    <field name="employee_id" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id='vcls_timesheet_read_view' model='ir.ui.view'>
            <field name="name">vcls-timesheet.view.tree.readonly</field>
            <field name="model">account.analytic.line</field>
            <field name="arch" type="xml">
                <tree editable="top" string="Timesheets" create="false" colors="red:at_risk==True">
                    <field name="date" readonly="1"/>
                    <field name = "internal_comment" readonly="1"/>
                    <field name="name" readonly="1" />
                    <field name="project_id" readonly="1"/>
                    <field name="task_id" readonly="1"/>
                    <field name="unit_amount" readonly="1" string="Duration (hours)"/>
                    <field name="lc_comment" readonly="1"/>
                    <field name="employee_id" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id='vcls_timesheet_pc_view_tree' model='ir.ui.view'>
            <field name="name">vcls-timesheet.view.tree</field>
            <field name="model">account.analytic.line</field>
            <field name="arch" type="xml">
                <tree editable="top" string="PC Review" colors="red:at_risk==True">
                    <field name="date"/>
                    <field name="employee_id"/>
                    <field name = "internal_comment" />
                    <field name="name" />
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field name="unit_amount" string="Duration (hours)"/>
                    <field name="adjustment_reason_id" />
                </tree>
            </field>
        </record>

        <record id="action_vcls_timesheet_tree" model="ir.actions.act_window">
            <field name="name">LC Review</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.analytic.line</field>
            <!-- <field name="context">{'group_by':['project_id']}</field> -->
            <field name="view_mode">tree</field>
            <field name="view_id" ref="vcls_timesheet_lc_view_tree"/>
            <field name="domain">[('validated','=',True),'|',('stage_id', '=', 'lc_review'),('stage_id','=','draft')]</field>
        </record>

        
        <!-- <record id="action_timesheet_lc_review" model="ir.actions.act_window">
            <field name="name">LC Review</field>
            <field name="res_model">account.analytic.line</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('stage_id', '=', 'lc_review')]</field>
        </record> -->

        <record id="view_timesheet_pc_review_search" model="ir.ui.view">
            <field name="name">timesheet.pc.review.search</field>
            <field name="model">account.analytic.line</field>
            <field name="arch" type="xml">
                <search string="PC Review">
                    <filter string="With comment" name="comment" domain="[('lc_comment','=',True)]"/>
                </search>
            </field>
        </record>


        <record id="action_timesheet_pc_review" model="ir.actions.act_window">
            <field name="name">PC Review</field>
            <field name="res_model">account.analytic.line</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="vcls_timesheet_pc_view_tree"/>
            <field name="search_view_id" ref="view_timesheet_pc_review_search"/>
            <field name="domain">[('stage_id', '=', 'pc_review')]</field>
            <field name="context">{'search_default_comment': 1}</field>
        </record>

        <record id="action_timesheet_adjustment" model="ir.actions.act_window">
            <field name="name">Adjustment Validation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.analytic.line</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('stage_id', '=', 'adjustment_validation')]</field>
        </record>

        <record id="action_lc_all_timesheet_tree" model="ir.actions.act_window">
            <field name="name">All Timesheets</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.analytic.line</field>
            <field name="context">{'group_by':['partner_id', 'project_id']}</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="vcls_timesheet_read_view"/>
            <field name="domain">[('project_id.user_id','=',uid)]</field>
        </record>

        <record id="action_pc_all_timesheet_tree" model="ir.actions.act_window">
            <field name="name">All Timesheets</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.analytic.line</field>
            <field name="context">{'group_by':['partner_id', 'project_id']}</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="vcls_timesheet_read_view"/>
            <field name="domain">[('project_id.user_id','=',uid)]</field>
        </record>

        <record id="action_lm_all_timesheet_tree" model="ir.actions.act_window">
            <field name="name">Managee Timesheets</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.analytic.line</field>
            <field name="context">{'group_by':['project_id']}</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="vcls_timesheet_read_view"/>
            <field name="domain">[('is_authorized', '=', True)]</field>
        </record>

        <menuitem id="hr_timesheet.timesheet_menu_activity_mine"
            name="My Timesheets"
            sequence="1"
            parent="hr_timesheet.timesheet_menu_root"
            action="hr_timesheet.act_hr_timesheet_line"/>

        <menuitem id="hr_timesheet.timesheet_menu_activity_all"
            name="All Timesheets"
            parent="hr_timesheet.menu_hr_time_tracking"
            action="hr_timesheet.timesheet_action_all"
            groups="hr_timesheet.group_timesheet_manager,vcls_pc"/>

        <menuitem name="To Validate" id="timesheet_grid.menu_timesheet_grid_validate"
                  parent="hr_timesheet.timesheet_menu_root"
                  groups="hr_timesheet.group_timesheet_manager"
                  sequence="10"
                  active="False"/>

        <menuitem id="menu_lc_review"
            name="LC"
            sequence="2"
            parent="hr_timesheet.timesheet_menu_root"
        />
        
        <menuitem id="timesheet_menu_lc_review"
            name="LC Review"
            sequence="1"
            parent="menu_lc_review"
            action="action_vcls_timesheet_tree"/>
        
        <menuitem id="timesheet_menu_lc_all"
            name="Timesheets"
            sequence="2"
            parent="menu_lc_review"
            action="action_lc_all_timesheet_tree"/>
        
        <menuitem id="menu_pc_review"
            name="PC"
            sequence="3"
            parent="hr_timesheet.timesheet_menu_root"
        />

        <menuitem id="timesheet_menu_pc_review"
            name="PC Review"
            sequence="1"
            parent="menu_pc_review"
            action="action_timesheet_pc_review"/>
        
        <menuitem id="timesheet_menu_pc_all"
            name="Timesheets"
            sequence="2"
            parent="menu_pc_review"
            action="action_pc_all_timesheet_tree"/>

        <menuitem id="menu_lm_timesheet"
            name="Line Manager"
            sequence="4"
            parent="hr_timesheet.timesheet_menu_root"
        />

        <menuitem id="menu_lm_timesheet_tree"
            name="Tree"
            sequence="1"
            parent="menu_lm_timesheet"
            action="action_lm_all_timesheet_tree"
        />

        <!-- record id="menu_lm_timesheet" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('vcls-hr.vcls_group_lm'))]"/>
        </record -->
        
        <menuitem id="hr_timesheet.timesheet_menu_adjustment"
            name="Adjustment Approval"
            sequence="5"
            parent="hr_timesheet.timesheet_menu_root"
            action="action_timesheet_adjustment"/>

        <record id="timesheet_view_tree_user_colored" model="ir.ui.view">
            <field name="name">account.analytic.line.view.tree.with.user.colored</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.timesheet_view_tree_user"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="before">
                    <field name="stage_id" invisible='1'/>
                </xpath>
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-success">stage_id=='draft'</attribute>
                    <attribute name="decoration-primary">stage_id=='lc_review'</attribute>
                    <attribute name="decoration-info">stage_id=='pc_review'</attribute>
                    <attribute name="decoration-danger">stage_id=='carry_forward'</attribute>
                    <attribute name="decoration-warning">stage_id=='invoiceable'</attribute>
                </xpath>
            </field>
        </record>

