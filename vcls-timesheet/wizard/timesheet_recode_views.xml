<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record model="ir.ui.view" id="timesheet_recode_wizard_form">
            <field name="name">timesheet.recode.wizard.form</field>
            <field name="model">tool.timesheet.recode</field>
            <field name="arch" type="xml">
                <form string="Tool Timesheet Recode">
                    <group>
                        <field name="mode" widget="radio"/>
                        <field name="include_childs"/>
                        <field name="rate_ids" invisible="1"/>
                    </group>
                    <group>
                        <group string="Source">
                            <field name="source_project_id" attrs="{'required':[('mode','in',['replace_rate'])]}"/>
                            <field name="source_rate_id" attrs="{'required':[('mode','in',['replace_rate'])]}" domain="[('id','in',rate_ids)]"/>
                            <field name="source_task_id"/>
                            <field name="source_employee_id"/>
                            <field name="date_range_start"/>
                            <field name="date_range_end"/>
                            <field name="source_status" attrs="{'invisible':[('mode','in',['replace_rate'])],'required':[('mode','in',['update_status'])]}"/>
                        </group>
                        <group string="Target">
                            <field name="target_rate_id" attrs="{'invisible':[('mode','in',['update_status'])],'required':[('mode','in',['replace_rate'])]}" domain="[('id','in',rate_ids)]"/>
                            <field name="target_status" attrs="{'invisible':[('mode','in',['replace_rate'])],'required':[('mode','in',['update_status'])]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="run_date" readonly="1"/>
                        <field name="info" readonly="1"/>
                    </group>
                    <footer>
                        <button string="Test"
                            name="run_test" type="object" class="btn-primary o_mail_send"/>
                        
                        <button string="Run"
                            name="run" type="object" class="btn-primary o_mail_send" attrs="{'invisible':[('run_date','!=',False)]}"/>
                        
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="timesheet_recode_wizard_tree">
            <field name="name">timesheet.recode.wizard.tree</field>
            <field name="model">tool.timesheet.recode</field>
            <field name="arch" type="xml">
                <tree string="Tool Timesheet Recode">
                    
                    <field name="mode"/>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                    <field name="source_project_id"/>
                    <field name="run_date"/>
                </tree>
            </field>
        </record>

        <record id="action_timesheet_recode" model="ir.actions.act_window">
            <field name="name">Tool Timesheet Recode</field>
            <field name="res_model">tool.timesheet.recode</field>
            <field name="view_mode">tree,form</field>
        </record>

