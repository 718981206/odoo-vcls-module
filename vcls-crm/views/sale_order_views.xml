<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- We Override the form view -->
        <record model="ir.ui.view" id="view_order_form">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='pricelist_id']" position="after">
                    <field name="product_category_id" required='True'/>
                </xpath>

                <!-- We add a domain to the selectabel products -->
                <xpath expr="//field[@name='product_id']" position="replace">
                    <field name="product_id" doamin="[('categ_id','=',parent.product_category_id)]" context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id}" attrs="{                                                     'readonly': [('product_updatable', '=', False)],                                                     'required': [('display_type', '=', False)],                                                 }" force_save="1"/>              
                </xpath>
                

            </field>
        </record>
        

    </data>
</odoo>