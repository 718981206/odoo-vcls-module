<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <!-- Root Menu -->
        <record id="menu_bd_root" model="ir.ui.menu">
                <field name="name">BD</field>
                <field name="groups_id" eval="[(4,ref('vcls-hr.vcls_group_superuser_lvl1'))]"/>
                <field name="sequence">7</field>
                <field name="active" eval="True"/>
                <field name="web_icon" eval="sale,static/description/icon.png"/>    
        </record>

        <!-- Opportunities -->
        <menuitem
            id="menu_bd_opp_main"
            name="Opportunities"
            parent="menu_bd_root"
            sequence="3"
        />

        <menuitem
            id="menu_bd_opp_pipeline"
            name="Opportunities Pipeline"
            parent="menu_bd_opp_main"
            action="crm.crm_lead_opportunities_tree_view"
            sequence="3"
        />

    </data>
</odoo>
        