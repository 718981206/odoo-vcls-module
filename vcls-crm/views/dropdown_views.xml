<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_lead_source_tree">
            <field name="name">view_lead_source_tree</field>
            <field name="model">lead.source</field>
            <field name="arch" type="xml">
                <tree create='1' editable='bottom'>
                    <field name="name"/>
                    <field name="active"/> 
                </tree>
            </field>
        </record>
 
        <record model="ir.actions.act_window" id="action_lead_source">
            <field name="name">Lead Sources</field>
            <field name="res_model">lead.source</field>
            <field name="view_mode">tree</field>
            <field name="view_ref">view_lead_source_tree</field>
        </record>
        
    </data>
</odoo>
    
    
        
  