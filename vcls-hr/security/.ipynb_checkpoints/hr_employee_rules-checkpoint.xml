<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- HR manager sees all companies -->
        <record id="hr_company_manager_rule" model="ir.rule">
            <field name="name">hr_company_manager_rule: global managers sees all companies </field>
            <field name="model_id" ref="base.model_res_company"/>
            <field name="domain_force">[
                    (1,'=',1),
            ]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        </record>
        
        <!-- CONTRACT -->
        
        <!-- Employees can only see their own contract -->
         <record id="hr_contract_employee_rule" model="ir.rule">
            <field name="name">hr_contract_employee_rule: employee sees owns </field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="domain_force">[
                    ('employee_id.user_id', '=', user.id),
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Local HR (Officiers without multicompany) can only see contracts of their own company -->
        <record id="hr_contract_hr_user_rule" model="ir.rule">
            <field name="name">hr_contract_hr_user_rule: local sees all his company </field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="domain_force">[
                    ('company_id','in',[user.company_id.id]),
            ]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>
        
        <!-- Glabal HR (Managers) can see all contracts -->
        <record id="hr_contract_hr_manager_rule" model="ir.rule">
            <field name="name">hr_contract_hr_manager_rule: global sees all </field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="domain_force">[
                    (1,'=',1),
            ]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        </record>
        
        <!-- BONUS -->
        
