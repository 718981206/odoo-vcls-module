            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        </record>
        
        <!-- BENEFITS -->
        
        <!-- Employees can only see their own benefits -->
         <record id="hr_benefit_employee_rule" model="ir.rule">
            <field name="name">hr_benefit_employee_rule: employee sees owns </field>
            <field name="model_id" ref="vcls-hr.model_hr_benefit"/>
            <field name="domain_force">[
                    ('contract_id.employee_id.user_id', '=', user.id),
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Local HR (Officiers without multicompany) can only see benefits of their own company -->
        <record id="hr_benefit_hr_user_rule" model="ir.rule">
            <field name="name">hr_benefit_hr_user_rule: local sees all his company </field>
