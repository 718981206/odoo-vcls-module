<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- HR manager sees all companies -->
        <record id="hr_company_manager_rule" model="ir.rule">
            <field name="name">hr_company_manager_rule: global managers sees all companies </field>
            <field name="model_id" ref="base.model_res_company"/>
            <field name="domain_force">[
                    (1,'=',1),
            ]</field>
            <field name="groups" eval="[(4, ref('vcls_group_HR_global'))]"/>
        </record>
        
        <!-- Global HR can't edit themselves -->
        <record id="hr_employee_hr_global_rule" model="ir.rule">
            <field name="name">hr_employee_hr_global_rule: can't edit themselves </field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">[
                    ('user_id', '!=', user.id),
            ]</field>
            <field name="groups" eval="[(4, ref('vcls_group_HR_global'))]"/>
        </record>
        
        <!-- Local HR (Officiers without multicompany) can only edit employee of their own company, but not themsleves -->
        <record id="hr_employee_hr_local_rule" model="ir.rule">
            <field name="name">hr_employee_hr_local_rule: own company but not themselves </field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">[
                    ('company_id','in',[user.company_id.id]),
                    ('user_id', '!=', user.id),
            ]</field>
            <field name="groups" eval="[(4, ref('vcls_group_HR_local'))]"/>
        </record>
        
        <!-- CONTRACT -->
        
        <!-- Employees can only see their own contract -->
         <record id="hr_contract_employee_rule" model="ir.rule">
            <field name="name">hr_contract_employee_rule: employee sees owns </field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="domain_force">[
                    ('employee_id.user_id', '=', user.id),
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Heads can see all contracts in their activity -->
         <record id="hr_contract_head_rule" model="ir.rule">
            <field name="name">hr_contract_head_rule: head see all activity </field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="domain_force">[
                '|',
                ('job_profile_id.job1_head.user_id', '=', user.id),
                ('job_profile_id.job2_head.user_id', '=', user.id),
            ]</field>
            <field name="groups" eval="[(4, ref('vcls_group_head'))]"/>
        </record>
        
        <!-- LM can see N-1 contracts -->
         <record id="hr_contract_lm_rule" model="ir.rule">
            <field name="name">hr_contract_lm_rule: lm see N-1 contract </field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="domain_force">[
                ('employee_id.parent_id.user_id', '=', user.id),
            ]</field>
            <field name="groups" eval="[(4, ref('vcls-hr.vcls_group_lm'))]"/>
        </record>
        
        <!-- Heads can see all bonuses in their activity -->
         <record id="hr_bonus_head_rule" model="ir.rule">
            <field name="name">hr_bonus_head_rule: head see all activity </field>
            <field name="model_id" ref="model_hr_bonus"/>
            <field name="domain_force">[
                '|',
                ('employee_id.contract_id.job_profile_id.job1_head.user_id', '=', user.id),
                ('employee_id.contract_id.job_profile_id.job2_head.user_id', '=', user.id),
            ]</field>
            <field name="groups" eval="[(4, ref('vcls_group_head'))]"/>
        </record>
        
        <!-- LM can see N-1 bonus -->
         <record id="hr_bonus_lm_rule" model="ir.rule">
            <field name="name">hr_bonus_lm_rule: head see all activity </field>
            <field name="model_id" ref="model_hr_bonus"/>
            <field name="domain_force">[
                ('employee_id.parent_id.user_id', '=', user.id),
            ]</field>
            <field name="groups" eval="[(4, ref('vcls_group_lm'))]"/>
        </record>
        
        <!-- Local HR (Officiers without multicompany) can only see contracts of their own company -->
        <record id="hr_contract_hr_user_rule" model="ir.rule">
            <field name="name">hr_contract_hr_user_rule: local sees all his company </field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="domain_force">[
                    ('company_id','in',[user.company_id.id]),
            ]</field>
            <field name="groups" eval="[(4, ref('vcls_group_HR_local'))]"/>
        </record>
        
        <!-- Glabal HR (Managers) can see all contracts -->
        <record id="hr_contract_hr_manager_rule" model="ir.rule">
            <field name="name">hr_contract_hr_manager_rule: global sees all </field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="domain_force">[
                    (1,'=',1),
            ]</field>
            <field name="groups" eval="[(4, ref('vcls_group_HR_global'))]"/>
        </record>
        
        <!-- BONUS -->
        
        <!-- Employees can only see their own bonuses -->
         <record id="hr_bonus_employee_rule" model="ir.rule">
            <field name="name">hr_bonus_employee_rule: employee sees owns </field>
            <field name="model_id" ref="vcls-hr.model_hr_bonus"/>
            <field name="domain_force">[
                    ('employee_id.user_id', '=', user.id),
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Local HR (Officiers without multicompany) can only see bonuses of their own company -->
        <record id="hr_bonus_hr_user_rule" model="ir.rule">
            <field name="name">hr_bonus_hr_user_rule: local sees all his company </field>
            <field name="model_id" ref="vcls-hr.model_hr_bonus"/>
            <field name="domain_force">[
                    ('employee_id.company_id','in',[user.company_id.id]),
            ]</field>
            <field name="groups" eval="[(4, ref('vcls_group_HR_local'))]"/>
        </record>
        
        <!-- Glabal HR (Managers) can see all bonuses -->
        <record id="hr_bonus_hr_manager_rule" model="ir.rule">
            <field name="name">hr_bonus_hr_manager_rule: global sees all </field>
            <field name="model_id" ref="vcls-hr.model_hr_bonus"/>
            <field name="domain_force">[
                    (1,'=',1),
            ]</field>
            <field name="groups" eval="[(4, ref('vcls_group_HR_global'))]"/>
        </record>
        
        <!-- BENEFITS -->
        
        <!-- Employees can only see their own benefits -->
         <record id="hr_benefit_employee_rule" model="ir.rule">
            <field name="name">hr_benefit_employee_rule: employee sees owns </field>
            <field name="model_id" ref="vcls-hr.model_hr_benefit"/>
            <field name="domain_force">[
                    ('contract_id.employee_id.user_id', '=', user.id),
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Local HR (Officiers without multicompany) can only see benefits of their own company -->
        <record id="hr_benefit_hr_user_rule" model="ir.rule">
            <field name="name">hr_benefit_hr_user_rule: local sees all his company </field>
            <field name="model_id" ref="vcls-hr.model_hr_benefit"/>
            <field name="domain_force">[
                    ('contract_id.company_id','in',[user.company_id.id]),
            ]</field>
            <field name="groups" eval="[(4, ref('vcls_group_HR_local'))]"/>
        </record>
        
        <!-- Glabal HR (Managers) can see all benefits -->
        <record id="hr_benefit_hr_manager_rule" model="ir.rule">
            <field name="name">hr_benefit_hr_manager_rule: global sees all </field>
            <field name="model_id" ref="vcls-hr.model_hr_benefit"/>
            <field name="domain_force">[
                    (1,'=',1),
            ]</field>
            <field name="groups" eval="[(4, ref('vcls_group_HR_global'))]"/>
        </record>
        
    </data>
</odoo>