<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_client_activity_tree">
            <field name="name">view_client_activity_tree</field>
            <field name="model">client.activity</field>
            <field name="arch" type="xml">
                <tree create='1' editable='bottom'>
                    <field name="name"/>
                    <field name="active"/> 
                </tree>
            </field>
        </record>
 
        <record model="ir.actions.act_window" id="action_client_activity">
            <field name="name">Client Activity</field>
            <field name="res_model">client.activity</field>
            <field name="view_mode">tree</field>
            <field name="view_ref">view_client_activity_tree</field>
        </record>

        <record model="ir.ui.view" id="view_client_product_tree">
            <field name="name">view_client_product_tree</field>
            <field name="model">client.product</field>
            <field name="arch" type="xml">
                <tree create='1' editable='bottom'>
                    <field name="name"/>
                    <field name="active"/> 
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_client_product">
            <field name="name">Expertise Area</field>
            <field name="res_model">client.product</field>
            <field name="view_mode">tree</field>
            <field name="view_ref">view_client_product_tree</field>
        </record>

    </data>
</odoo>
    
    
        
  