<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="external_layout_standard">
            <div class="header" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
                <t t-set="infos" t-value="o.parent_quotation_informations()"/>
                <t t-foreach="infos" t-as="info">
                    <t t-set="key" t-value="info[0]"/>
                    <t t-set="value" t-value="info[1]"/>
                    <t t-if="key == 'po_id'">
                        <div class="col-12">
                            <h6>
                                Your reference:
                                <t t-esc="value"/>
                            </h6>
                        </div>
                    </t>
                    <t t-elif="key == 'From'">
                        <span style="margin-left:2%;">
                            From:
                            <t t-esc="value"/>
                        </span>

                    </t>
                    <t t-elif="key == 'To'">
                        <span>To: <t t-esc="value"/></span>
                    </t>
                    <t t-else="">
                        <div class="col-12">
                            <h6>
                                <t t-esc="value"/>
                            </h6>
                        </div>
                    </t>
                </t>
            </div>

            <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name"
                 t-att-data-oe-id="o and o.id"
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-raw="0"/>
            </div>

            <div class="footer o_standard_footer">
                <div class="text-center" style="border-top: 1px solid black;">
                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page:
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>
        <template id="report_invoice_document">
            <t t-call="vcls-invoicing.external_layout_standard">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <div class="page">
                    <div class="row">
                        <t t-if="o.invoice_line_ids">
                            <table class="table table-bordered" name="invoice_line_table" style="width:100%;">
                                <thead>
                                    <tr>
                                        <t t-set="colspan" t-value="6"/>
                                        <th class="text-left">
                                            <span>Product Name</span>
                                        </th>
                                        <th class="text-left">
                                            <span>Unit Price</span>
                                        </th>
                                        <th class="text-left">
                                            <span>Quantity</span>
                                        </th>
                                        <th t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span>Total Price</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="current_total" t-value="0"/>
                                    <t t-set="current_taxe" t-value="0"/>
                                    <t t-foreach="o.invoice_line_ids.filtered(lambda sol: sol.vcls_type == 'rates').sorted(key=lambda r: r.price_unit)"
                                       t-as="line">
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                                        <t t-set="current_taxe" t-value="current_taxe + line.price_tax"/>
                                        <t t-set="current_total" t-value="current_total + line.price_total"/>
                                        <tr style="background-color:#dee2e6;">
                                            <td colspan="4">
                                                <h5>Fees for professional services</h5>
                                            </td>
                                        </tr>
                                        <tr style="border-style: dotted;">
                                            <td>
                                                <span t-esc="line.product_id.name"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_unit"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.quantity"/>
                                            </td>
                                            <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span t-field="line.price_subtotal"/>
                                            </td>
                                        </tr>
                                        <tr class="is-subtotal text-right">
                                            <td colspan="4">
                                                <strong class="mr16">Total untaxed</strong>
                                                <span t-esc="current_subtotal"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                        <tr class="text-right">
                                            <td colspan="4">
                                                <strong class="mr16">Taxes</strong>
                                                <span t-esc="current_taxe"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                        <tr class="o_price_total text-right">
                                            <td colspan="4">
                                                <strong class="mr16">Total</strong>
                                                <span t-esc="current_total"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                        <t t-if="line_last">
                                            <t t-set="current_subtotal" t-value="0"/>
                                            <t t-set="current_total" t-value="0"/>
                                            <t t-set="current_taxe" t-value="0"/>
                                        </t>
                                    </t>
                                    <t t-foreach="o.invoice_line_ids.filtered(lambda sol: sol.vcls_type == 'fixed')"
                                       t-as="line">
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                                        <t t-set="current_taxe" t-value="current_taxe + line.price_tax"/>
                                        <t t-set="current_total" t-value="current_total + line.price_total"/>
                                        <tr style="background-color:#dee2e6;">
                                            <td colspan="4">
                                                <h5>Fixed fees</h5>
                                            </td>
                                        </tr>
                                        <tr style="border-style: dotted;">
                                            <td>
                                                <span t-esc="line.product_id.name"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_unit"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.quantity"/>
                                            </td>
                                            <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span t-field="line.price_subtotal"/>
                                            </td>
                                        </tr>
                                        <tr class="is-subtotal text-right">
                                            <td colspan="4">
                                                <strong class="mr16">Total untaxed</strong>
                                                <span t-esc="current_subtotal"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                        <tr class="text-right">
                                            <td colspan="4">
                                                <strong class="mr16">Taxes</strong>
                                                <span t-esc="current_taxe"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                        <tr class="o_price_total text-right">
                                            <td colspan="4">
                                                <strong class="mr16">Total</strong>
                                                <span t-esc="current_total"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                        <t t-if="line_last">
                                            <t t-set="current_subtotal" t-value="0"/>
                                            <t t-set="current_total" t-value="0"/>
                                            <t t-set="current_taxe" t-value="0"/>
                                        </t>
                                    </t>
                                    <t t-if="o.get_analytic_accounts_lines()">
                                        <tr style="background-color:#dee2e6;">
                                            <td colspan="4">
                                                <h5>Expenses</h5>
                                            </td>
                                        </tr>
                                        <t t-foreach="o.get_analytic_accounts_lines()" t-as="key">
                                            <t t-if="key =='supplier_expenses' or key =='communications_expenses'">
                                                <t t-set="current_subtotal"
                                                   t-value="current_subtotal + key_value.price_subtotal"/>
                                                <t t-set="current_taxe" t-value="current_taxe + key_value.price_tax"/>
                                                <t t-set="current_total"
                                                   t-value="current_total + key_value.price_total"/>
                                                <tr style="border-style: dotted;">
                                                    <td>
                                                        <span t-esc="key_value.product_id.name"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="key_value.price_unit"
                                                              t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="key_value.quantity"/>
                                                    </td>
                                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                        <span t-esc="key_value.price_subtotal"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-else="">
                                                <t t-set="current_total" t-value="current_total + key_value"/>
                                                <tr style="border-style: dotted;">
                                                    <td colspan="3">
                                                        <span t-esc="key"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="key_value"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                        <tr class="is-subtotal text-right">
                                            <td colspan="4">
                                                <strong class="mr16">Total untaxed</strong>
                                                <span t-esc="current_subtotal"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                        <tr class="text-right">
                                            <td colspan="4">
                                                <strong class="mr16">Taxes</strong>
                                                <span t-esc="current_taxe"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                        <tr class="o_price_total text-right">
                                            <td colspan="4">
                                                <strong class="mr16">Total</strong>
                                                <span t-esc="current_total"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </div>
                    <div style="margin-top:5%;">
                        <strong>
                            <span>Payement Terms :</span>
                            <t t-esc="o.payment_term_id.name"/>
                        </strong>
                    </div>
                </div>
                <t t-if="o.deliverable_grouped_lines()">
                    <div style="page-break-before: always;">
                        <h3>Budget Details</h3>
                        <div class="row">
                            <table class="table table-bordered" name="invoice_line_table" style="width:100%;">
                                <thead>
                                    <tr>
                                        <t t-set="colspan" t-value="6"/>
                                        <th class="text-left">
                                            <span>Description</span>
                                        </th>
                                        <th class="text-left">
                                            <span>Ordered Quantity</span>
                                        </th>
                                        <th class="text-left">
                                            <span>Unit Price</span>
                                        </th>
                                        <th class="text-left">
                                            <span>Subtotal</span>
                                        </th>
                                        <th t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span>Invoiced Quantity</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-foreach="o.deliverable_grouped_lines()" t-as="key">
                                        <tr style="background-color:#dee2e6;">
                                            <td colspan="5">
                                                <h5>
                                                    <t t-esc="key"/>
                                                </h5>
                                            </td>
                                        </tr>
                                        <t t-foreach="key_value" t-as="line">
                                            <tr style="border-style: dotted;">
                                                <td>
                                                    <span t-esc="line.product_id.name"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="line.product_uom_qty"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="line.price_unit"
                                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                                </td>
                                                <td t-attf-class="text-right">
                                                    <span t-field="line.price_subtotal"/>
                                                </td>
                                                <td t-attf-class="text-right">
                                                    <span t-esc="line.qty_invoiced"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </t>
            </t>
        </template>
        <template id="report_related_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-call="vcls-invoicing.report_invoice_document" t-lang="lang"/>
                </t>
            </t>
        </template>
        <report
                id="project_invoice"
                model="account.invoice"
                string="Related Invoice"
                report_type="qweb-pdf"
                name="vcls-invoicing.report_related_invoice"
                file="vcls-invoicing.report_related_invoice"
        />
        <function model="ir.actions.report" name="unlink_action" eval="[ref('account.account_invoices')]"/>
        <function model="ir.actions.report" name="unlink_action"
                  eval="[ref('account.account_invoices_without_payment')]"/>
    </data>
</odoo>
