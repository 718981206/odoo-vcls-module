<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="card_scanner_template">
        <div>
            <div id="card_scanner_camera">
                <!-- Camera sensor -->
                <canvas id="camera--sensor"></canvas>
                <!-- Camera view -->
                <video id="camera--view" autoplay="autoplay" playsinline="playsinline"/>
                <!-- Camera output -->
                <img src="//:0" alt="" id="camera--output"/>
                <!-- Camera trigger -->
                <button id="camera--trigger">Take a picture</button>
            </div>
        </div>
    </t>

</templates>
