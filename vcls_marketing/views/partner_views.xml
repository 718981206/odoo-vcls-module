<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>   

        <record id="view_form_contact_all_marketing" model="ir.ui.view">
            <field name="name">view_form_contact_all_marketing</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="vcls-contact.view_form_contact_all"/>

            <field name="arch" type="xml">

                <xpath expr="/form/sheet/notebook/page[5]" position="after">
                    <page name="marketing" string="Marketing Info">
                    <group>
                        <group>
                            <field name="marketing_project_id" options="{'no_create': True, 'no_create_edit' : True}"/>
                            <field name="marketing_task_id" domain="[('project_id','=','marketing_project_id')]" options="{'no_create': True, 'no_create_edit' : True}" invisible="[('is_company','=',True)]"/>
                            <field name="opted_in_date" widget="date" attrs="{'invisible':['|',('marketing_task_id','=',False),('is_company','=',True)]}"/>
                            <field name="marketing_task_out_id" options="{'no_create': True, 'no_create_edit' : True}" invisible="[('is_company','=',True)]"/>
                            <field name="opted_out_date" widget="date" attrs="{'invisible':['|',('marketing_task_id','=',False),('is_company','=',True)]}"/>
                            <field name="gdpr_status"/>
                        </group>
                        <group>
                            
                        </group>
                    </group>
                    </page>
                </xpath>
            </field>
        </record>  
    
    </data>
</odoo>