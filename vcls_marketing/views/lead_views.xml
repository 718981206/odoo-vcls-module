<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>   

        <!-- For the leads -->
        <record id="crm_case_form_view_leads_inherit" model="ir.ui.view">
            <field name="name">crm_case_form_view_leads_inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="vcls-crm.crm_case_form_view_leads_inherit"/>
            <field name="arch" type="xml">
                <field name="source_id" position="after">
                    <field name="marketing_project_id" options="{'no_create': True, 'no_create_edit' : True}" attrs="{'readonly':[('partner_id','!=',False)]}"/>
                    <field name="marketing_task_id" domain="[('project_id','=','marketing_project_id')]" options="{'no_create': True, 'no_create_edit' : True}" attrs="{'readonly':[('partner_id','!=',False)]}"/>
                    <field name="opted_in_date" widget="date" attrs="{'invisible':[('marketing_task_id','=',False)],'readonly':[('partner_id','!=',False)]}"/>
                    <field name="marketing_task_out_id" options="{'no_create': True, 'no_create_edit' : True}" attrs="{'readonly':[('partner_id','!=',False)]}"/>
                    <field name="opted_out_date" widget="date" attrs="{'invisible':[('marketing_task_out_id','=',False)],'readonly':[('partner_id','!=',False)]}"/>
                    <field name="gdpr_status" attrs="{'readonly':[('partner_id','!=',False)]}"/>
                </field>
            </field>
        </record>

        <!-- For the opportunities -->
        <record id="crm_case_form_view_oppor_inherit" model="ir.ui.view">
            <field name="name">crm_case_form_view_leads_inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="vcls-crm.crm_case_form_view_oppor_inherit"/>
            <field name="arch" type="xml">
                <field name="source_id" position="after">
                    <field name="marketing_project_id" options="{'no_create': True, 'no_create_edit' : True}" readonly="1"/>
                    <field name="marketing_task_id" domain="[('project_id','=','marketing_project_id')]" readonly="1" options="{'no_create': True, 'no_create_edit' : True}"/>
                    <field name="opted_in_date" widget="date" attrs="{'invisible':[('marketing_task_id','=',False)]}" readonly="1"/>
                    <field name="marketing_task_out_id" options="{'no_create': True, 'no_create_edit' : True}" readonly="1"/>
                    <field name="opted_out_date" widget="date" attrs="{'invisible':[('marketing_task_out_id','=',False)]}" readonly="1"/>
                    <field name="gdpr_status" readonly="1"/>
                </field>
            </field>
        </record>  

        <!-- add needaction_menu_ref to reload quotation needaction when opportunity needaction is reloaded -->
        <record id="crm.crm_lead_opportunities" model="ir.actions.act_window">
            <field name="context">{
                'default_type': 'opportunity',
                'default_user_id': uid,
                'default_marketing_project_id': marketing_project_id,
                }</field>
        </record>
    
    </data>
</odoo>