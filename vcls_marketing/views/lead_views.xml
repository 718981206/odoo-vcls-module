<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>   

        <!-- For the leads -->
        <record id="crm_case_form_view_leads_inherit" model="ir.ui.view">
            <field name="name">crm_case_form_view_leads_inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="vcls-crm.crm_case_form_view_leads_inherit"/>
            <field name="arch" type="xml">
                <field name="source_id" position="after">
                    <field name="marketing_project_id" string="Source" options="{'no_create': True, 'no_create_edit' : True}" attrs="{'readonly':False}"/>
                    <field name="marketing_task_id" string="Source Campaign" domain="[('stage_id','in',['Planned','In Progress']),('task_type','=','marketing')]" options="{'no_create': True, 'no_create_edit' : True}" attrs="{'readonly':False}"/>
                </field>
                <field name="referent_id" position="replace">
                    <group>
                        <field name="referent_id" options="{'no_create': True, 'no_create_edit' : True, 'no_open':True}"/>
                        <field name="opted_in_date" widget="date" attrs="{'invisible':[('marketing_task_id','=',False)],'readonly':False}"/>
                        <field name="marketing_task_out_id" domain="[('stage_id','in',['Planned','In Progress']),('task_type','=','marketing')]" options="{'no_create': True, 'no_create_edit' : True}" attrs="{'readonly':[('partner_id','!=',False)]}"/>
                        <field name="opted_out_date" widget="date" attrs="{'readonly':[('partner_id','!=',False)]}"/>
                        <field name="gdpr_status" readonly="1" force_save="1"/>
                        <field name="opted_in" attrs="{'readonly':['|',('partner_id','!=',False),('type','=','opportunity')]}"/>
                        <field name="content_name"/>
                    </group>
                    
                    <!--
                    <group string = 'All Participated Events'>
                        <button name = "all_campaigns_pop_up" 
                            string = "OPEN" 
                            type = "object"
                            icon="fa-bar-chart"
                            class = 'btn btn-primary'
                        />
                    </group>-->
                </field>
                <xpath expr="//page[@name='extra']/group" position="after">
                    <group string = 'Other Campaigns'>
                        <field name="marketing_task_ids">
                            <tree>
                                <field name="project_id"/>
                                <field name="name"/>
                                <field name="user_id"/>
                                <field name="date_start" widget="date"/>
                                <field name="date_end" widget="date"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- For the opportunities -->
        <record id="crm_case_form_view_oppor_inherit" model="ir.ui.view">
            <field name="name">crm_case_form_view_leads_inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="vcls-crm.crm_case_form_view_oppor_inherit"/>
            <field name="arch" type="xml">
                <field name="internal_ref" position="after">
                    <field name="marketing_project_id" string="Source" options="{'no_create': True, 'no_create_edit' : True}" readonly="0"/>
                    <field name="marketing_task_id" string="Source Campaign" domain="[('stage_id','in',['Planned','In Progress']),('task_type','=','marketing')]" options="{'no_create': True, 'no_create_edit' : True}"/>
                </field>
                <field name="source_id" position="after">
                    <field name="opted_in_date" widget="date" attrs="{'invisible':[('marketing_task_id','=',False)]}" readonly="1" invisible="1"/>
                    <field name="marketing_task_out_id" domain="[('stage_id','in',['Planned','In Progress']),('task_type','=','marketing')]" options="{'no_create': True, 'no_create_edit' : True}" readonly="1" invisible="1"/>
                    <field name="opted_out_date" widget="date" attrs="{'invisible':[('marketing_task_out_id','=',False)]}" readonly="1" invisible="1"/>
                    <field name="gdpr_status" readonly="1" invisible="1"/>
                </field>
            </field>
        </record>  

        
    
    </data>
</odoo>