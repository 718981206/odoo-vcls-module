<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>   

        <!-- For the leads -->
        <record id="crm_case_form_view_leads_inherit" model="ir.ui.view">
            <field name="name">crm_case_form_view_leads_inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="vcls-crm.crm_case_form_view_leads_inherit"/>
            <field name="arch" type="xml">
                <field name="source_id" position="after">
                    <field name="marketing_project_id" options="{'no_create': True, 'no_create_edit' : True}"/>
                    <field name="marketing_task_id" domain="[('project_id','=','marketing_project_id')]" options="{'no_create': True, 'no_create_edit' : True}"/>
                    <field name="opted_in_date" widget="date" attrs="{'invisible':[('marketing_task_id','=',False)]}"/>
                    <field name="marketing_task_out_id" options="{'no_create': True, 'no_create_edit' : True}"/>
                    <field name="opted_out_date" widget="date" attrs="{'invisible':[('marketing_task_out_id','=',False)]}"/>
                    <field name="gdpr_status"/>
                </field>
            </field>
        </record>

        <!-- For the opportunities -->
        <record id="crm_case_form_view_oppor_inherit" model="ir.ui.view">
            <field name="name">crm_case_form_view_leads_inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="vcls-crm.crm_case_form_view_oppor_inherit"/>
            <field name="arch" type="xml">
                <field name="source_id" position="after">
                    <field name="marketing_project_id" options="{'no_create': True, 'no_create_edit' : True}"/>
                    <field name="marketing_task_id" domain="[('project_id','=','marketing_project_id')]" options="{'no_create': True, 'no_create_edit' : True}"/>
                    <field name="opted_in_date" widget="date" attrs="{'invisible':[('marketing_task_id','=',False)]}"/>
                    <field name="marketing_task_out_id" options="{'no_create': True, 'no_create_edit' : True}"/>
                    <field name="opted_out_date" widget="date" attrs="{'invisible':[('marketing_task_out_id','=',False)]}"/>
                    <field name="gdpr_status"/>
                </field>
            </field>
        </record>

        
    
    </data>
</odoo>