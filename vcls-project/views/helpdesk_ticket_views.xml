<odoo>
    <data>
        <record id="view_ticket_form_default" model="ir.ui.view">
            <field name="name">view_ticket_form_default</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="vcls-helpdesk.view_ticket_form_default"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='assignment']" position="after">
                    <group string="Link to project" name="project">
                            <field name = 'project_id' domain="[('project_type','=','internal')]"/>
                            <field name = 'task_id' domain="[('project_id','=',project_id)]"/>
                    </group>
                    
                </xpath>
                
            </field>
        </record>

    </data>
</odoo>